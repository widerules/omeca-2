<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear_slidebar_hand"
    android:layout_width="match_parent"
    android:layout_height="68dp"
    android:background="#ffffff"
    android:orientation="horizontal" >

    <com.ensibs.omeca.view.PlayerView
        android:id="@+id/playerview_slidebar_hand"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_weight="1" >
    </com.ensibs.omeca.view.PlayerView>
    

    <LinearLayout
        android:background="@android:color/background_light"
        android:id="@+id/hand_actions"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_weight="2"
        android:gravity="right"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/button_color_order"
            android:layout_height="match_parent"
            android:layout_width="68dp"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:src="@drawable/color_order"
            android:background="@drawable/action_background"
            android:layout_marginRight="5dp" />
      

        <ImageView
            android:id="@+id/button_value_order"
            android:layout_height="match_parent"
            android:layout_width="68dp"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:src="@drawable/value_order"
            android:background="@drawable/action_background"
            android:layout_marginRight="5dp" />

        <ImageView
            android:id="@+id/button_total_order"
            android:layout_height="match_parent"
            android:layout_width="68dp"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:src="@drawable/total_order"
            android:background="@drawable/action_background" />
        
    </LinearLayout>
    <RelativeLayout
 	   android:id="@+id/collapse"
        android:layout_width="68dp"
	   	android:layout_height="68dp"
	   	android:layout_weight="2">
	   	<ImageView 
	   	    android:src="@drawable/arrow_down"
	   	    android:layout_height="68dp"
	   	    android:layout_width="68dp"
	   	    android:layout_alignParentRight="true"
	   	    />
 	  </RelativeLayout>

</LinearLayout>