<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="0dp"
    android:layout_height="68dp"
    android:layout_weight="4"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/hand_actions"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_weight="3"
        android:background="@android:color/background_light"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/button_color_order"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="5dp"
            android:background="@drawable/action_background"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:src="@drawable/color_order" />

        <ImageView
            android:id="@+id/button_value_order"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="5dp"
            android:background="@drawable/action_background"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:src="@drawable/value_order" />

        <ImageView
            android:id="@+id/button_total_order"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/action_background"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:src="@drawable/total_order" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/collapse"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_weight="2" >

        <ImageView
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/arrow_down" />
    </RelativeLayout>

</LinearLayout>