<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid
                android:color="#eeeeeeee" />
            <stroke
           		android:width="2dp"
            	android:color="#333333" />
            <corners
  				android:bottomLeftRadius="10dip"
                android:topLeftRadius="10dip" />
            <padding
                android:left="6dip"
                android:top="6dip"
                android:right="6dip"
                android:bottom="6dip" />
        </shape>
    </item>
    <item>
        <shape>
            <solid
                android:color="#ffffffff" />
            <stroke
           		android:width="2dp"
            	android:color="#000000" />
            <corners
  				android:bottomLeftRadius="10dip"
                android:topLeftRadius="10dip" />
            <padding
                android:left="6dip"
                android:top="6dip"
                android:right="6dip"
                android:bottom="6dip" />
        </shape>
    </item>
</selector>